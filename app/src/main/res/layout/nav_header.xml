<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="#5E35B1"
    android:paddingLeft="15dp">

    <TextView
        android:id="@+id/welcomeview"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="60dp"
        android:layout_toStartOf="@+id/nav_userimg"
        android:text="Welcome!!"
        android:textColor="@color/white"
        android:textSize="26sp" />

    <ImageView
        android:id="@+id/nav_userimg"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:scaleType="centerCrop"
        android:src="@drawable/logobk"
        app:srcCompat="@drawable/logobk" />

    <TextView
        android:id="@+id/nav_username"
        android:layout_width="172dp"
        android:layout_height="58dp"
        android:layout_below="@+id/welcomeview"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="44dp"
        android:layout_toStartOf="@+id/nav_userimg"
        android:text="TextView"
        android:textAlignment="viewStart"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/nav_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nav_username"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="19dp"
        android:layout_toStartOf="@+id/nav_userimg"
        android:text="TextView"
        android:textColor="#CCCCCC" />
</RelativeLayout>